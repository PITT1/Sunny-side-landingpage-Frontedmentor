---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/Nav-bar.astro';
import { Image } from 'astro:assets';
import arrowDown from '../images/icon-arrow-down.svg';
import eggImage from '../images/image-transform.jpg';
import Card1 from '../components/Card1.astro';
import redCup from '../images/image-stand-out.jpg';
import ClientCard from '../components/ClientCard.astro';
import emily from '../images/image-emily.jpg';
import thomas from '../images/image-thomas.jpg';
import jennie from '../images/image-jennie.jpg';
import milkbottles from '../images/image-gallery-milkbottles.jpg';
import orangegallery from '../images/image-gallery-orange.jpg';
import cone from '../images/image-gallery-cone.jpg';
import sugarcubes from '../images/image-gallery-sugarcubes.jpg';
---

<Layout title="Sunny side">
	<main class=" bg-no-repeat bg-cover bg-center h-screen w-full">
		<header>
			<NavBar/>
		</header>
		<div class=" mx-auto flex flex-col justify-center items-center h-1/2 w-11/12 ">
			<h1 class=" text-center tracking-superwidest text-4xl h-auto font-fraunces font-black text-White">WE ARE CREATIVES</h1>
			<Image class=' mt-16' src={arrowDown} alt='arrowDown'/>
		</div>
	</main>

	<Card1 image={eggImage}
			alt='egg' 
			title='Transform your brand' 
			paragrap='Engage your clients through compelling visuals that do most of the marketing for you.' 
			rowReverse={true}
	/>

	<Card1 image={redCup}
			alt='cup'
			title='Stand out to the right audience'
			paragrap="Using collavorative formula of designers, researchers photographers, videographers and copywriters, we´ll build and extend your brand in digital places."
			rowReverse={false}
	/>

	<section class=" h-auto flex flex-col sm:flex-row ">
		<div class=" cherries bg-cover bg-center h-screen sm:h-h-100 w-full flex flex-col justify-end align-middle">
			<h1 class=" font-fraunces font-black text-center text-3xl text-Dark-desaturated-cyan">Grapic Design</h1>
			<p class=" font-barlow mb-16 mt-5 mx-5 text-center font-semibold text-Dark-desaturated-cyan">Great design makes you memorable. We deliver artwork that underscores your brand messages and capture potential clients' attention</p>
		</div>
		<div class=" oranges bg-cover bg-center h-screen sm:h-h-100 w-full flex flex-col justify-end align-middle">
			<h1 class=" font-fraunces font-black text-center text-3xl text-Dark-desaturated-cyan">Photography</h1>
			<p class=" font-barlow mb-16 mt-5 mx-5 text-center font-semibold text-Dark-desaturated-cyan">Increase your credibility by getting the most stunning, high-quality photos that improve your business image.</p>
		</div>
	</section>

	<section class="h-auto">
		<h2 class=" mx-auto text-center font-fraunces font-black text-Grayish-blue py-14 tracking-mediumwidest">CLIENT TESTIMONIALS</h2>
		<div class=" h-auto sm:flex sm:justify-center">
			<ClientCard avatar={emily}
					alt='avatar emily'
					paragrap='We put our trust in sunnyside and they delivered, making sure our needs were met and deadlines were always hit.'
					name='Emily R.'
					ocupation='Marketing Director'/>

			<ClientCard avatar={thomas}
					alt='avatar thomas'
					paragrap="sunnysides´s enthusiasm coupled with their keen interest in our brand´s success made it a satisfying enjoyable experience."
					name='Thomas S.'
					ocupation='Chief Operating officer'/>

			<ClientCard avatar={jennie}
					alt='avatar jennie'
					paragrap='incredible end result! Our sales increased over 400% when we worked with Sunnyside. Highly recommended!'
					name='Jennie F.'
					ocupation='Business Owner'/>
		</div>
	</section>

	<section class=" w-screen h-auto grid grid-cols-2 grid-rows-2 sm:flex">
		<div>
			<Image class=' aspect-square sm:aspect-auto' src={milkbottles} alt='milk bottles'/>
		</div>
		<div>
			<Image class=' aspect-square sm:aspect-auto' src={orangegallery} alt='oranges'/>
		</div>
		<div>
			<Image class=' aspect-square sm:aspect-auto' src={cone} alt='cone ice cream'/>
		</div>
		<div>
			<Image class=' aspect-square sm:aspect-auto' src={sugarcubes} alt='sugar cubes'/>
		</div>
	</section>
</Layout>

<style>
	main {
		background-image: url(../images/image-header.jpg);
	}

	.cherries {
		background-image: url(../images/image-graphic-design.jpg);
	}

	.oranges {
		background-image: url(../images/image-photography.jpg);
	}
</style>


